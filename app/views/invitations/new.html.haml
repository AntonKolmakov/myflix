%section.invite.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @invitation, url: invitations_path do |f|
        %header
          %h1 Invite a friend to join MyFlix!
        %fieldset
          .row
            .col-sm-3
              = f.text_field :recipient_name, label: "Friend's Name "
              = f.text_field :recipient_email, label: "Friend's Email Address"
          .row
            .col-sm-6
              = f.text_area :message, rows: 6, placeholder: "Please join this really cool site!"
        %fieldset.action
          = f.submit "Send Invitation"
        
